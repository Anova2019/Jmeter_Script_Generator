{
    "manifest_version": 3,
    "name": "Neo JMeter Script Recorder",
    "version": "1.0",
    "description": "Record user actions and convert them to JMeter (JMX) scripts.",
    "permissions": [
        "storage",
        "unlimitedStorage",
        "webRequest",
        "debugger",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "JMeter Recorder"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}